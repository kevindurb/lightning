  "main": "index.js",
  "scripts": {
    "tauri": "tauri",
    "build:client": "esbuild ./client/index.tsx --bundle --outfile=./dist/client/index.js",
    "build:server": "esbuild ./server/index.ts --bundle --platform=node --target=node14 --outfile=./dist/server/index.js",
    "watch:client": "npm run build:client -- --watch",
    "watch:server": "npm run build:server -- --watch",
    "start:server": "nodemon --watch ./dist/server ./dist/server/index.js",
    "start": "concurrently npm:watch:* npm:start:server"
  },
